<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
 <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#C11B17" />
     
      <corners
          android:radius="5dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#C11B17"
          android:endColor="#F70D1A"
          android:angle="270" />
    
      <corners
          android:radius="5dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>