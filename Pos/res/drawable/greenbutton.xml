<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
 <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#54FF7F" />
      <stroke
          android:width="1dp"
          android:color="#FFFFFF" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#54FF7F"
          android:endColor="#30CC57"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#FFFFFF" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
</selector>