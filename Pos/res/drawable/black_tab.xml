<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
 <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#34282C" />
      
      <corners
          android:radius="5dp" />
      <padding
          android:left="10dp"
          android:top="10dp"
          android:right="10dp"
          android:bottom="10dp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#34282C"
          android:endColor="#34282C"
          android:angle="270" />
      
     
      
    </shape>
  </item>
</selector>