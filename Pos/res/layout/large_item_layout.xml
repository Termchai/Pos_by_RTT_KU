<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/large_item_layout_product_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="code"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_color"
            android:textColorHint="#000000"
            android:textColorLink="#000000" />

        <TextView
            android:id="@+id/large_text_item"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:text="name"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_color"
            android:textColorHint="#000000"
            android:textColorLink="#000000" />

        <TextView
            android:id="@+id/sale_report_productTextView"
            android:layout_width="28dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/large_text_quantity"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="@color/text_color"
            android:textColorHint="#000000"
            android:textColorLink="#000000" />

        <TextView
            android:id="@+id/large_text_price"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/activity_vertical_margin"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/product_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="à¸¿"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/text_color" />
    </LinearLayout>

</LinearLayout>
