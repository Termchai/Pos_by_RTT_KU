<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"  >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sale_report_productTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Product ID :" />

        <TextView
            android:id="@+id/product_itemId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="productCode" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sale_report_priceTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Name :" />

        <TextView
            android:id="@+id/product_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sale_report_productTextView"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Type :" />

        <TextView
            android:id="@+id/product_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="type" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Price :" />

        <TextView
            android:id="@+id/product_itemPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="price" />

    </LinearLayout>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="Barcode :" />

    <TextView
        android:id="@+id/product_itemBarcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="barcode" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/productItem_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_grey_button"
            android:textColor="#FFFFFF"
            android:text="Edit" />

    </LinearLayout>

</LinearLayout>
