<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:text="Change Quantity"
        android:textColor="@color/text_color"
        android:textSize="40dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sale_report_productTextView"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="Product Code"
            android:textColor="@color/text_color"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text=":   "
            android:textColor="@color/text_color"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/inventoryEdit_productcode_textview"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="TextView"
            android:textColor="@color/text_color"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sale_report_priceTextView"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="Name"
            android:textColor="@color/text_color"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text=":   "
            android:textColor="@color/text_color"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/inventoryEdit_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="TextView"
            android:textColor="@color/text_color"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sale_report_timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/sale_report_quantityTextView"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="Old quantity"
            android:textColor="@color/text_color"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/TextView03"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text=":   "
            android:textColor="@color/text_color"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/inventoryEdit_oldquantity_textview"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="TextView"
            android:textColor="@color/text_color"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sale_report_costTextView"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="Cost"
            android:textColor="@color/text_color"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/inventory_report_productTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":   "
            android:textColor="@color/text_color"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/inventoryEdit_cost_edittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="200dp"
            android:layout_height="35dp"
            android:text="Add quantity"
            android:textColor="@color/text_color"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/TextView04"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text=":   "
            android:textColor="@color/text_color"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/inventoryEdit_quantity_edittext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center_vertical|right" >

            <requestFocus />
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right" >

        <Button
            android:id="@+id/inventoryEdit_ok_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/greenbutton"
            android:text="OK"
            android:textColor="@color/text_button_color"/>

        <Button
            android:id="@+id/inventoryEdit_remove_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/light_grey_button"
            android:textColor="@color/text_button_color"
            android:text="Remove"/>
    </LinearLayout>

</LinearLayout>